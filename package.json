{
  "name": "az-func-ts-starter",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "concurrently npm:start:*",
    "start:tsc": "tsc -w --preserveWatchOutput",
    "start:func": "nodemon --watch dist --delay 1 --exec \"func start -p 7072 --cors http://localhost:8080 http://localhost:8081\"",
    "test": "jest --silent --json --outputFile=coverage/test_result.json",
    "test:dev": "jest",
    "fix": "npm run prettier && npm run eslint",
    "eslint": "eslint --cache --fix ./",
    "prettier": "prettier --write ./",
    "docs": "js-yaml ./docs/swagger/document.yaml > ./docs/swagger/document.json && prettier --write docs/swagger",
    "swagger": "lsof -ti :8080 | xargs kill && swagger-codegen generate -i ./docs/swagger/document.yaml -l nodejs-server -o ./docs/swagger && npm --prefix ./docs/swagger install && node docs/swagger/index.js"
  },
  "dependencies": {
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "concurrently": "^7.2.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "jest-mock-extended": "^3.0.1",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "~4.7.4",
    "azure-functions-core-tools": "^4.0.5198"
  }
}
